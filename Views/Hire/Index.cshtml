@using VektorelProje.Models;
@model List<Hire>

    @if(TempData["basarili"] !=null)
{
    <h2 style="color:red"> @TempData["basarili"]</h2>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1>Kiralamalar</h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Müşteri Id
                </th>
                <th>
                    Kitap Id
                </th>

                <th>
                   
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var Hire in Model)
            {
                <tr>
                    <td>@Hire.Id</td>
                    <td>@Hire.CustomerId</td>
                    <td>@Hire.Book.BookName</td>
                   
                    <td>
                        <a asp-controller="Hire" asp-action="AddUpdate" asp-route-id="@Hire.Id" type="button" class="btn btn-warning" style="width:250px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Hire" asp-action="Delete" asp-route-id="@Hire.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">

        <div>
            <a asp-controller="Hire" asp-action="AddUpdate" class="btn btn-lg btn-primary" type="button">
                Yeni Kiralama Kaydı Oluştur
            </a>
        </div>

    </div>

</div>
