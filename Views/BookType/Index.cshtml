@model List<BookType>

    @if(TempData["basarili"] !=null)
{
    <h2 style="color:red"> @TempData["basarili"]</h2>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Türleri</h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Kitap Türü
                </th>
                
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="BookType" asp-action="AddOrUpdate" asp-route-id="@item.Id" type="button" class="btn btn-warning" style="width:250px">Düzenle</a> |
                        <a asp-controller="BookType" asp-action="Delete" asp-route-id="@item.Id" type="button" class="btn btn-danger" style="width:250px">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">

        <div>
            <a asp-controller="BookType" asp-action="AddOrUpdate" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>

    </div>

</div>
